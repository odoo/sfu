{
  "name": "odoo-sfu",
  "description": "Odoo's SFU server",
  "version": "1.0.0",
  "author": "Odoo",
  "license": "LGPL-3.0",
  "type": "module",
  "scripts": {
    "build": "rollup -c",
    "start": "node ./src/server.js",
    "test": "LOG_LEVEL=none node --experimental-vm-modules ./node_modules/.bin/jest -i",
    "test:dev": "LOG_LEVEL=warn node --experimental-vm-modules ./node_modules/.bin/jest --detectOpenHandles --verbose --collectCoverage",
    "test:watch": "LOG_LEVEL=verbose node --experimental-vm-modules ./node_modules/.bin/jest --watch -i"
  },
  "engines": {
    "node": ">=20.9.0"
  },
  "files": [
    "src/**/*"
  ],
  "imports": {
    "#src/*": "./src/*",
    "#tests/*": "./tests/*"
  },
  "dependencies": {
    "jsonwebtoken": "^9.0.2",
    "mediasoup": "^3.12.13",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.6.2",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@types/node": "^20.5.0",
    "eslint": "~8.46.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-prettier": "~4.2.0",
    "fake-mediastreamtrack": "^1.2.0",
    "git-rev-sync": "^3.0.2",
    "jest": "^29.6.2",
    "mediasoup-client": "^3.6.101",
    "prettier": "~2.8.8",
    "rollup": "^2.79.1",
    "rollup-plugin-license": "3.2.0"
  }
}
